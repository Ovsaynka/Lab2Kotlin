<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:background">@drawable/btn</item>
    </style>

    <style name="Text">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:textColor">@color/screenBackground</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:background">@drawable/text</item>
    </style>

    <style name="textName">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:text">@string/text_name</item>
    </style>

</resources>
